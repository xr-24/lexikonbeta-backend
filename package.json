{
  "name": "scrabble-backend",
  "version": "1.0.0",
  "description": "Multiplayer Scrabble game backend server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "node -e \"const { Pool } = require('pg'); const fs = require('fs'); const path = require('path'); const pool = new Pool({ connectionString: process.env.DATABASE_URL }); const sql = fs.readFileSync(path.join(__dirname, 'migrations', '001_initial_setup.sql'), 'utf8'); pool.query(sql).then(() => { console.log('✅ Migration completed'); pool.end(); }).catch(err => { console.error('❌ Migration failed:', err); process.exit(1); });\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "scrabble",
    "multiplayer",
    "socket.io",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dompurify": "^3.0.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "ioredis": "^5.6.1",
    "jsdom": "^23.0.1",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.2",
    "socket.io": "^4.7.4",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.15.4",
    "@types/validator": "^13.11.7",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
